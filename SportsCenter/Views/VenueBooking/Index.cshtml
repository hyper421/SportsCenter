                         :next-Step-Label="'下一步'"
                         :final-Step-Label="'完成預約'"
                         ref="my-wizard">
            <div slot="page1">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-4 mb-4" v-for="item in listData.category">
