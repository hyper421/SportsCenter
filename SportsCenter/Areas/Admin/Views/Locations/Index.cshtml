<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.11.5/b-2.2.2/datatables.min.css" />
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.11.5/b-2.2.2/b-colvis-2.2.2/b-html5-2.2.2/b-print-2.2.2/sb-1.3.2/sp-2.0.0/sl-1.3.4/datatables.min.js"></script>
<style>
    .pic {
        width: 80px;
        height: 80px;
    }
</style>
<script>
    fetch('/api/Locations/getall').then(response => response.json()).then(result => {
      initialDataTable(result)
    });
    function deleteLocations(id){
        console.log(id)
        if(window.confirm("是否刪除該場館?")){
            axios.delete(`/api/Locations/delete?id=${id}`)
            .then(function (response) {
                if(response.data){
                      Swal.fire({icon: 'success',title: '成功',text: '刪除成功!'}).then((result)=> { window.location.reload()});
                  }else{
                      Swal.fire({icon: 'error',title: '錯誤',text: '刪除失敗!'});
                  }
            });
        }

    }
    function initialDataTable(sourceData) {
      $(document).ready(function() {
        $('#dataTable').DataTable({
          dom: 'frtip',
          data: sourceData,
          columns: [{
              data: "id"
            }, {
              data: "name"
            }, {
              data: "englishName"
            },  {
              data: "area"
            }, {
              data: "contactPhone"
            }, {
              data: "imagePath",
              render: function(data, type, row) {
                  console.log(data);
                return `<img src="/system/${data}" class="pic">`
              }
            },
            {
              data: 'id',
              width: "10%",
              render: function(data, type, row) {
                return `
      <a href="/admin/Locations/Edit/${data}" class="btn btn-primary mx-3">修改</a>
      <button onclick="deleteLocations(${data})" class="btn btn-danger mx-3">刪除</button>`
              }
            }
          ]
        });
      });
    };
</script>